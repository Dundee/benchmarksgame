    <span class="hl kwb">$sum</span> <span class="hl sym">=</span> <span class="hl num">0</span><span class="hl sym">;</span>
    <span class="hl kwb">$sum</span> <span class="hl sym">+=</span> <span class="hl kwd">A</span><span class="hl sym">(</span><span class="hl kwb">$_</span><span class="hl sym">,</span><span class="hl kwb">$i</span><span class="hl sym">) *</span> <span class="hl kwb">$u</span><span class="hl sym">[</span><span class="hl kwb">$_</span><span class="hl sym">]</span>    <span class="hl kwa">for</span> <span class="hl num">0</span> <span class="hl sym">..</span> <span class="hl kwb">$#u</span><span class="hl sym">;</span>
    <span class="hl kwb">$v</span><span class="hl sym">[</span><span class="hl kwb">$i</span><span class="hl sym">] =</span> <span class="hl kwb">$sum</span><span class="hl sym">;</span>
