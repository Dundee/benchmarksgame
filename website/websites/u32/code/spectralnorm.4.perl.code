  <span class="hl kwa">for</span> <span class="hl sym">(</span><span class="hl num">0</span> <span class="hl sym">..</span> <span class="hl num">9</span><span class="hl sym">) {</span>
    <span class="hl kwb">$v</span> <span class="hl sym">=</span> <span class="hl kwd">AtAu</span><span class="hl sym">(</span> <span class="hl kwb">$u</span> <span class="hl sym">);</span>
