<span class="hl sym">}</span>

<span class="hl kwa">sub</span> Atu <span class="hl sym">{</span>
  <span class="hl kwc">my</span> <span class="hl kwb">&#64;u</span> <span class="hl sym">=</span> &#64;<span class="hl sym">{</span><span class="hl kwb">$_</span><span class="hl sym">[</span><span class="hl num">0</span><span class="hl sym">]};</span>
  <span class="hl kwc">my</span> <span class="hl kwb">&#64;v</span><span class="hl sym">;</span>

